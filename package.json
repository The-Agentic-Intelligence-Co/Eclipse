{
  "name": "sidebar-extension",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "build:extension": "tsc && vite build && npm run copy-manifest",
    "copy-manifest": "copy manifest.json dist\\ && copy src\\background\\background.ts dist\\",
    "watch": "vite build --watch & npm run copy-manifest",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "groq-sdk": "^0.3.0",
    "@google/generative-ai": "^0.24.1",
    "marked": "^16.1.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^10.1.0",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.1",
    "webextension-polyfill": "^0.12.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.326",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@types/webextension-polyfill": "^0.10.7",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.35.2",
    "eslint-plugin-react-hooks": "^4.6.2",
    "postcss": "^8.4.47",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.5.4",
    "vite": "^6.3.5"
  }
}
