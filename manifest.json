{
  "manifest_version": 3,
  "name": "Eclipse",
  "version": "1.0.0",
  "description": "Eclipse is a Chrome extension that helps you browse the web.",
  "permissions": [
    "sidePanel",
    "activeTab",
    "tabs",
    "scripting",
    "tabGroups"
  ],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_title": "Eclipse"
  },
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "src/side-panel/index.html"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["src/content/domContentScript.js"]
  }]
}
